include=~/.config/mako/colors-{{ .color_scheme }}

sort=-time
layer=overlay
max-history=10
width=300
height=110
border-size=2
border-radius=15
icons=0
max-icon-size=64
default-timeout=10000
ignore-timeout=1
font=monospace 14

[urgency=high]
default-timeout=0

[app-name=cliphist]
default-timeout=1500

[app-name=grim]
width=666
on-button-right=exec makoctl menu -n "$id" -- fuzzel --dmenu --placeholder 'Select action'
