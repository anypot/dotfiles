#!/usr/bin/env bash

confirm="echo -e 'No\nYes' | fuzzel --dmenu --auto-select --placeholder Sure?"
case $(printf "Lock\nLogout\nSuspend\nReboot\nShutdown" | fuzzel --dmenu --placeholder Quit?) in
"Lock")
  swaylock
  ;;
"Logout")
  pkill -KILL -u "$USER"
  ;;
"Suspend")
  systemctl suspend
  ;;
"Reboot")
  [[ $(eval "${confirm}") == "Yes" ]] && systemctl reboot
  ;;
"Shutdown")
  [[ $(eval "${confirm}") == "Yes" ]] && systemctl poweroff
  ;;
esac
